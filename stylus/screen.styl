@import "nib"
@import "jsk-grid"

// ## Configuration ####################################################
global-reset()

jsk-grid-width = 100%

base-font-colour = #424242
base-colour = #f3f3f3
link-base-colour = #70b1ef
link-visited-colour = darken(desaturate(link-base-colour, 30%), 30%)
link-hover-colour = lighten(saturate(link-base-colour, 30%), 30%)


// ## Classes ##########################################################

.constrained
  width: 960px
  margin: 0 auto

.undecorated
  text-decoration: none


// ## Layout ###########################################################
body
  font-size: 18px
  font-family: Lato, sans
  background: darken(base-colour, 5%)
  color: base-font-colour
  line-height: 130%
  border-top: 10px solid #555

#header
  background: base-colour
  height: 100px
  padding-top: 30px

  #header-row
    jsk-grid-row: 12

  #header-container
    @extends .constrained

  #logo
    jsk-grid-column: 4

  #top-navigation
    jsk-grid-column: 8

  .fork-ribbon
    @extends .undecorated
    position: absolute
    top: 0
    right: 0
    background: #222
    padding: 10px 100px
    color: #eee
    transform: rotate(45deg) translateX(110px) translateY(-35px)
    letter-spacing: 1px
    word-spacing: 3px

#content
  background: base-colour
  padding: 3em 0

  #content-wrapper
    @extends .constrained

#footer
  padding: 50px 0
  text-align: center
  border-top: 1px solid darken(base-colour, 10%)
  color: #999
  letter-spacing: 2px
  font-size: 90%

// ## Typography #######################################################
#logo 
  a
    @extends .undecorated
  h1 a
    font-weight: 100
    color: #999
    font-size: 72px
    line-height: 100%
  em a
    text-transform: uppercase
    color: #ccc
    font-size: 18px
    letter-spacing: 1.3px
    padding-left: 5px
    
#top-navigation
  padding-top: 55px
  text-align: right
  
  li
    display: inline-block
    margin: 0 20px
  a
    @extends .undecorated
    color: #888
    font-size: 20px
    padding:  5px 10px
    border-bottom: 5px solid transparent
    text-transform: uppercase
    letter-spacing: 1px

    &:hover
      color: #aaa
    &.active
      color: #aaa
      border-bottom-color: link-base-colour
    
#hero-description
  background: #424242
  color: #eee
  text-align: center
  padding: 30px 0 60px
  text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3)
  &.narrow
    padding: 0
  h2
    font-size: 42px
    line-height: 200%

  p
    font-size: 24px
    font-weight: 300
    color: #ddd
    line-height: 1.2em
  

.highlight-section
  .title
    font-weight: 300
    text-align: center
    line-height: 150%
    font-size: 32px
    color: #999
    margin-bottom: 1em
    span
      position: relative
      z-index: 1
      background: base-colour
      padding: 0 20px
    &:after
      content: ""
      display: block
      background: darken(base-colour, 10%)
      position: relative
      top: -20px
      height: 1px
    
.overview-boxes-container
  jsk-grid-row: 12
  clearfix()
  
.overview-boxes
  li
    jsk-grid-column: 4
    margin-bottom: 20px
    height: 150px
    text-align: center
    box-sizing: border-box
  li:nth-child(2), li:nth-child(5)
    border-left: 1px solid #ddd
    border-right: 1px solid #ddd
  h3
    font-size: 20px
    font-weight: bold
    text-transform: uppercase
    line-height: 1.5em
    margin-bottom: 1em
    word-spacing: 2px
  p
    padding: 0 10px
    color: #888
    
  
    
.section
  margin-top: 2em

a
  color: link-base-colour
  text-decoration: none

a:hover
  color: link-hover-colour
  text-decoration: underline

a:visited
  color: link-visited-colour

code
  font-family: monospace
  color: #bf8330

.heart
  color: lighten(desaturate(#d8005f, 50%), 50%)
  font-size: 150%
  vertical-align: middle

.doge
  whitespace: pre
  font-size: 2em
  color: #ffaa40
  font-family: "Comic Sans", cursive
  line-height: 150%
